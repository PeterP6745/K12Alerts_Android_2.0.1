<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_clear_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/subjectEditText"
        android:layout_alignEnd="@+id/subjectEditText" />

    <EditText
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/subjectEditText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/border_thick_blue"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:hint="Enter subject"
        android:inputType="textAutoCorrect"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine|textAutoCorrect"
        android:ems="10"
        android:id="@+id/messageEditText"
        android:layout_below="@+id/subjectEditText"
        android:layout_marginTop="51dp"
        android:layout_alignLeft="@+id/subjectEditText"
        android:layout_alignStart="@+id/subjectEditText"
        android:layout_alignRight="@+id/subjectEditText"
        android:layout_alignEnd="@+id/subjectEditText"
        android:background="@drawable/red_border"
        android:hint="@string/enter_a_message"
        android:gravity="top|left"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendButton"
        android:textColor="#ffffff"
        android:background="#258408"
        android:layout_below="@+id/messageEditText"
        android:layout_alignLeft="@+id/messageEditText"
        android:layout_alignStart="@+id/messageEditText"
        android:layout_marginTop="78dp"
        android:layout_alignRight="@+id/messageEditText"
        android:layout_alignEnd="@+id/messageEditText" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loading ...."
        android:textColor="@color/k12alerts_red"
        android:id="@+id/alertTextView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fab"
        android:layout_alignLeft="@+id/subjectEditText"
        android:layout_alignStart="@+id/subjectEditText"
        android:layout_alignBottom="@+id/fab"
        android:textSize="20sp"/>


</RelativeLayout>