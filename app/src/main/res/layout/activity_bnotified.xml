<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/light_gray">


    <EditText
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/subjectEditText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/border_thick_blue"
        android:hint="Enter subject"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:inputType="textAutoCorrect"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine|textAutoCorrect"
        android:ems="10"
        android:id="@+id/messageEditText"
        android:layout_below="@+id/subjectEditText"
        android:layout_marginTop="51dp"
        android:layout_alignLeft="@+id/subjectEditText"
        android:layout_alignStart="@+id/subjectEditText"
        android:layout_alignRight="@+id/subjectEditText"
        android:layout_alignEnd="@+id/subjectEditText"
        android:background="@drawable/red_border"
        android:paddingLeft="3dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:hint="Enter a message"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendButton"
        android:textColor="#ffffff"
        android:background="#258408"
        android:layout_below="@+id/messageEditText"
        android:layout_alignLeft="@+id/messageEditText"
        android:layout_alignStart="@+id/messageEditText"
        android:layout_marginTop="78dp"
        android:layout_alignRight="@+id/messageEditText"
        android:layout_alignEnd="@+id/messageEditText" />
</RelativeLayout>