
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Registered Devices"
        android:textSize="17sp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/title_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="iOS Devices"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tv_ios_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="xx"
            android:textSize="18sp"
            android:gravity="center|end"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Other Devices"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tv_other_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="xx"
            android:textSize="18sp"
            android:gravity="center|end"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Total Devices"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/tv_total_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="xx"
            android:textSize="18sp"
            android:gravity="center|end"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Push Notifications"
        android:textSize="17sp"
        android:gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/title_gray"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/b_send_push_notifications"
        style="@style/Widget.AppCompat.Button"
        android:background="@color/white"
        android:text="Send Push Notifications"
        android:gravity="start|center"
        android:textAlignment="textStart"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/b_view_push_notifications"
        style="@style/Widget.AppCompat.Button"
        android:background="@color/white"
        android:text="View Push Notifications"
        android:gravity="start|center"
        android:textAlignment="textStart"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="1dp"
        android:textAllCaps="true"/>


</LinearLayout>



