<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ttsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.tts.TextToSpeechActivity"
    android:focusableInTouchMode="true"
    android:background="@color/light_gray">


    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:src="@drawable/ic_add_circle_black_24dp" />-->

    <Button
        android:id="@+id/canned_message_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/message_edit_text"
        android:text="Choose Message"
        android:background="@android:color/holo_red_dark"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/previewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/schedule"
        android:layout_below="@+id/canned_message_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_button_green_rounded"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Message"
        android:inputType="textMultiLine|textAutoCorrect"
        android:layout_below="@+id/voiceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/previewButton"
        android:layout_alignEnd="@+id/previewButton"
        android:background="@drawable/red_border"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male Voice"
        android:id="@+id/voiceButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/message_edit_text"
        android:layout_alignEnd="@+id/message_edit_text"
        android:background="@drawable/bg_button_male"
        android:textColor="#FFF"
        android:textStyle="bold"/>

</RelativeLayout>